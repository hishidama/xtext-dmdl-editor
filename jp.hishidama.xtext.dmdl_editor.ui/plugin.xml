      </wizard>
      <wizard
            category="jp.hishidama.xtext.dmdl_editor.ui.wizard-category"
            class="jp.hishidama.xtext.dmdl_editor.ui.wizard.NewImporterExporterWizard"
            icon="icons/newclass_wiz.gif"
            id="jp.hishidama.xtext.dmdl_editor.ui.wizard.new-importer-exporter"
            name="New Importer/Exporter class">
         <description>
            データモデルからImporter/Exporterクラスを生成します。
         </description>
      </wizard>
