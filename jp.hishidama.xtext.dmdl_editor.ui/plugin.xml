                  tooltip="Asakusa FrameworkのDMDLコンパイラーを起動してJavaクラスを生成します。">
            </command>
            <command
                  commandId="org.eclipse.xtext.ui.shared.OpenXtextElementCommand"
                  icon="icons/hishidama16.gif"
                  tooltip="Xtextの機能を使用してデータモデル・プロパティーを検索します。">
            </command>
            <separator
                  name="beginNewWizard"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.newWizard"
                  style="push">
               <parameter
                     name="newWizardId"
                     value="jp.hishidama.xtext.dmdl_editor.ui.wizard.new-datamodel">
               </parameter>
            </command>
            <command
                  commandId="org.eclipse.ui.newWizard"
                  style="push">
               <parameter
                     name="newWizardId"
                     value="jp.hishidama.xtext.dmdl_editor.ui.wizard.attribute">
               </parameter>
            </command>
            <command
                  commandId="org.eclipse.ui.newWizard"
                  style="push">
               <parameter
                     name="newWizardId"
                     value="jp.hishidama.xtext.dmdl_editor.ui.wizard.new-importer-exporter">
               </parameter>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
