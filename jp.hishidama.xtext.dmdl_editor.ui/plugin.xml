            extensions="dmdl">
    </provider>
  </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=additions">
         <menu
               label="DMDL EditorX">
            <command
                  commandId="jp.hishidama.asakusafwWrapper.command.dmdlErrorCheck">
            </command>
            <command
                  commandId="jp.hishidama.asakusafwWrapper.command.dmdlCompile">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="jp.hishidama.xtext.dmdl_editor.toolbar">
            <command
                  commandId="jp.hishidama.asakusafwWrapper.command.dmdlErrorCheck"
                  icon="icons/hishidama16.gif"
                  tooltip="Asakusa FrameworkのDMDLパーサーを使用してDMDLのエラーチェックを行います。">
            </command>
            <command
                  commandId="jp.hishidama.asakusafwWrapper.command.dmdlCompile"
